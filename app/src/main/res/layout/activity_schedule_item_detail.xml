<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="@dimen/toolbar_big"
            android:layout_width="match_parent"
            android:minHeight="@dimen/toolbar_width"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">
              <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/item_size">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_mask"
                    android:src="@drawable/person_image_empty"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/keyline_3"
                    android:layout_marginStart="@dimen/keyline_3"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark"
                        android:text="@string/debug_text"
                        android:textSize="18dp"
                        android:layout_above="@+id/lessonProgressBar"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:id="@+id/lessonName" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body_text_3"
                        android:text="19 min"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="@integer/font_textStyle_medium"
                        android:layout_above="@+id/lessonProgressBar"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:id="@+id/timeToLesson" />

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/lessonProgressBar"
                        android:progress="50" />
                </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_mask"
                        android:src="@drawable/person_image_empty"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/keyline_3"
                        android:layout_marginStart="@dimen/keyline_3"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark"
                            android:text="@string/debug_text"
                            android:textSize="18sp"
                            android:id="@+id/audience"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textStyle="@integer/font_textStyle_medium"
                            android:text="@string/debug_text"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:layout_below="@+id/audience"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />
                        

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_mask"
                        android:src="@drawable/person_image_empty"
                        android:id="@+id/status_item"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/keyline_3"
                        android:layout_marginStart="@dimen/keyline_3"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark"
                            android:text="@string/debug_text"
                            android:textSize="18sp"
                            android:id="@+id/debugText1"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:text="@string/debug_text"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textStyle="@integer/font_textStyle_medium"
                            android:layout_below="@+id/debugText1"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />


                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/devider"/>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/keyline_1"
                android:layout_marginRight="@dimen/keyline_1">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/body_text_3"
                    android:text="@string/to_study"
                    android:textSize="14dp"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textStyle="@integer/font_textStyle_medium"/>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark"
                        android:text="@string/homework"
                        android:textSize="18dp"
                        android:id="@+id/debugText3"
                        android:fontFamily="@string/font_fontFamily_medium"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textStyle="@integer/font_textStyle_medium"
                        android:text="@string/debug_text"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        android:layout_below="@+id/debugText3"
                        android:fontFamily="@string/font_fontFamily_medium"
                        />
                    </RelativeLayout>
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_size">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark"
                            android:text="@string/exams"
                            android:textSize="18sp"
                            android:id="@+id/debugText4"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textStyle="@integer/font_textStyle_medium"
                            android:text="@string/debug_text"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:layout_below="@+id/debugText4"
                            android:fontFamily="@string/font_fontFamily_medium"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <com.melnykov.fab.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            app:fab_colorNormal="?attr/colorAccent"
            app:fab_colorPressed="?attr/colorAccent"
            android:id="@+id/floating_button"/>
    </RelativeLayout>
</LinearLayout>